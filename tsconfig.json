{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES6",
        "jsx": "react-jsx",
        "allowJs": true,
        "removeComments": false,
        "lib": [
            "WebWorker",
            "ES6",
            "dom",
            "ES2020"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "src": [
                "./src"
            ],
        }
    },
    "include": [
        "decs.d.ts",
        "src"
    ],
    "exclude": ["node_modules"]
}